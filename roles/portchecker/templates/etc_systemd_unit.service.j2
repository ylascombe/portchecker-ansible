[Unit]
Description=Portchecker apiserver
After=network.target

[Service]
Environment=APISERVER_URL=http://{{ hostvars[groups['apiservers'][0]]['inventory_hostname'] }}:8090

SyslogIdentifier=portchecker-apiserver

ExecStart=/opt/portchecker/portchecker {{ portchecker_run_mode | default(portchecker_mode) }} /tmp/portchecker.config 1

Restart=always
StartLimitBurst=100

[Install]
WantedBy=multi-user.target
